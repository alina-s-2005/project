        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:project"
        mc:Ignorable="d"
        Title="Advertisement" Height="450" Width="800">
    <Grid>
        <TextBlock x:Name="SecAdvert" TextWrapping="Wrap" Text="10" VerticalAlignment="Top" HorizontalAlignment="Right" Width="29" Height="29" FontSize="20" Background="#FFD9EDEB"/>
        <MediaElement x:Name="VidioAdvertis" Margin="-2,5,39,5">
            <MediaElement.OpacityMask>
                <ImageBrush/>
            </MediaElement.OpacityMask>
        </MediaElement>

    </Grid>
</Window>
